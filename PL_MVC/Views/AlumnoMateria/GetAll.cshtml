@model ML.Alumno
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Alumnos</h2>
        </div>
    </div>



    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="hidden">Id Alumno</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Alumno alumno in Model.Alumnos)
                {
                    <tr>
                        <td class="hidden">@alumno.IdAlumno</td>
                        <td class="text-center">@alumno.Nombre @alumno.ApellidoPaterno @alumno.ApellidoMaterno</td>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("MateriasAsignadas", "AlumnoMateria", new {IdAlumno = alumno.IdAlumno})"></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>
